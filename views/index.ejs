<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <nav>
      <% include ../partials/header %>
    </nav>
      <div id="container">
        <h2>
            <% if(currentUser) { %>
                Welcome <%=currentUser.username%>!
            <% } else { %>
                Welcome!
            <% } %>
        </h2>
        <div class="comics">
          <% for(let i = 0; i < comics.length; i++){ %>

            <div class="comic">

            <br/>
              <a href="/comics/<%=comics[i].id%>">
              <img src="<%=comics[i].img%>">
              </a>
            <br/>
              <h3><%=comics[i].name%></h3>
            </div>
          <% } %>
        </div>
      </div>
      <div class="sign-in">
        <% if(currentUser) { %>
      <a class="nav-buttons" href="/comics/enterthephoenix"><img class="phx" src="https://freestencilgallery.com/wp-content/uploads/2017/02/X-Men-Phoenix-Symbol-Stencil-thumb.jpg" alt=""></a>
        <% }%>
      </div>
      <% if(currentUser) { %>
        <form class="logout" action="/sessions?_method=DELETE" method="POST">
          <input class="logout" type="submit" value="Logout"/>
        </form>
      <% } %>

      <nav>
        <% include ../partials/footer %>
      </nav>
  </body>
</html>
